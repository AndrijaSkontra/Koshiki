<form
  hx-post='/login'
  hx-vals='js:{email: localStorage.getItem("email") || ""}'
  hx-target='#error-message'
  hx-swap='innerHTML'
>
  <label class='input'>
    <svg
      class='h-[1em] opacity-50'
      xmlns='http://www.w3.org/2000/svg'
      viewBox='0 0 24 24'
    >
      <g
        stroke-linejoin='round'
        stroke-linecap='round'
        stroke-width='2.5'
        fill='none'
        stroke='currentColor'
      >
        <path
          d='M2.586 17.414A2 2 0 0 0 2 18.828V21a1 1 0 0 0 1 1h3a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h1a1 1 0 0 0 1-1v-1a1 1 0 0 1 1-1h.172a2 2 0 0 0 1.414-.586l.814-.814a6.5 6.5 0 1 0-4-4z'
        ></path>
        <circle cx='16.5' cy='7.5' r='.5' fill='currentColor'></circle>
      </g>
    </svg>
    <input
      type='password'
      name='password'
      required
      placeholder='Password'
      minlength='8'
      pattern='(?=.*\d)(?=.*[a-z]).{8,}'
      title='Must be more than 8 characters, including number, lowercase letter'
    />
  </label>
  <div id='error-message'></div>
  <button class='btn btn-primary w-full mt-4'>
    Continue
    <img class='htmx-indicator' src='/spinner.svg' />
  </button>
</form>
<button class='btn btn-outline mt-2'>Use email link</button>
<a href='/login' class='link link-primary w-full mt-4'>
  Change email
</a>
